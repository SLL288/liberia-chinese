generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @db.Uuid
  email     String?
  name      String?
  role      String   @default("USER")
  wechat    String?
  whatsapp  String?
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  posts     Post[]
  reports   Report[]
  orders    Order[]
  auditLogs AuditLog[]
  editedNewsItems NewsItem[] @relation("NewsItemEditor")
}

model Category {
  id        String   @id @default(cuid())
  slug      String   @unique
  nameZh    String
  nameEn    String
  parentId  String?
  sortOrder Int      @default(0)
  isActive  Boolean  @default(true)

  parent   Category? @relation("CategoryParent", fields: [parentId], references: [id])
  children Category[] @relation("CategoryParent")
  posts    Post[]
}

model Post {
  id           String     @id @default(cuid())
  userId       String     @db.Uuid
  categoryId   String
  title        String
  description  String
  price        Decimal?
  currency     String     @default("USD")
  city         String?
  region       String?
  status       String     @default("PENDING")
  isTop        Boolean    @default(false)
  isFeatured   Boolean    @default(false)
  isUrgent     Boolean    @default(false)
  topUntil     DateTime?
  featuredUntil DateTime?
  views        Int        @default(0)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  expiresAt    DateTime?

  user     User      @relation(fields: [userId], references: [id])
  category Category  @relation(fields: [categoryId], references: [id])
  images   PostImage[]
  reports  Report[]
  orders   Order[]
}

model PostImage {
  id        String @id @default(cuid())
  postId    String
  url       String
  sortOrder Int    @default(0)

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model Banner {
  id        String         @id @default(cuid())
  position  String
  imageUrl  String
  linkUrl   String?
  startAt   DateTime?
  endAt     DateTime?
  isActive  Boolean        @default(true)
  weight    Int            @default(0)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
}

model Report {
  id             String       @id @default(cuid())
  postId         String
  reporterUserId String?      @db.Uuid
  reason         String
  detail         String?
  status         String       @default("PENDING")
  createdAt      DateTime     @default(now())

  post     Post  @relation(fields: [postId], references: [id], onDelete: Cascade)
  reporter User? @relation(fields: [reporterUserId], references: [id])
}

model Order {
  id          String            @id @default(cuid())
  userId      String            @db.Uuid
  postId      String?
  product     String
  amount      Decimal
  currency    String            @default("USD")
  status      String            @default("PENDING")
  provider    String?
  providerRef String?
  createdAt   DateTime          @default(now())

  user User  @relation(fields: [userId], references: [id])
  post Post? @relation(fields: [postId], references: [id])
}

model PricingPlan {
  id           String            @id @default(cuid())
  product      String
  price        Decimal
  currency     String            @default("USD")
  durationDays Int               @default(7)
  isActive     Boolean           @default(true)
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
}

model AuditLog {
  id          String   @id @default(cuid())
  actorUserId String?  @db.Uuid
  action      String
  entityType  String
  entityId    String?
  detail      String?
  metadata    Json?
  createdAt   DateTime @default(now())

  actor User? @relation(fields: [actorUserId], references: [id])
}

model NewsSource {
  id        String    @id @default(cuid())
  name      String
  lang      String
  website   String
  rssUrl    String?
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  items     NewsItem[]
}

enum NewsStatus {
  QUEUED
  PROCESSING
  READY
  FAILED
}

model NewsItem {
  id           String     @id @default(cuid())
  sourceId     String
  source       NewsSource @relation(fields: [sourceId], references: [id])
  url          String     @unique

  title        String?
  publishedAt  DateTime?
  fetchedAt    DateTime?
  status       NewsStatus @default(QUEUED)
  error        String?
  ogImageUrl   String?
  imagePath    String?
  contentHash  String?
  rawExcerpt   String?    @db.Text
  summaryZh    String?    @db.Text
  whyItMatters String?    @db.Text
  tags         String[]   @default([])
  riskFlags    String[]   @default([])

  titleOverride        String?
  publishedAtOverride  DateTime?
  summaryOverrideZh    String?   @db.Text
  whyItMattersOverride String?   @db.Text
  tagsOverride         String[]  @default([])
  imageOverrideUrl     String?
  isHidden             Boolean   @default(false)
  isFeatured           Boolean   @default(false)
  editorNote           String?   @db.Text
  editedByUserId       String?   @db.Uuid
  editedAt             DateTime?

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  editedBy User? @relation("NewsItemEditor", fields: [editedByUserId], references: [id])
}
